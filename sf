;#UseHook
#NoEnv
#SingleInstance force
SendMode Input 
SetWorkingDir %A_ScriptDir%  
SetNumlockState, AlwaysOn
SetCapsLockState, Off

Ins::Suspend

delay()
{	
  Random, delay, 50, 80
  Sleep, delay
}

$q::
  Send, {p Down}{Click, R}{p Up}
  Send, q
    delay()
  Send, a
    delay()
return

$w::
  Send, {p Down}{Click, R}{p Up}
  Send, w
    delay()
  Send, a
    delay()
return

$e::
  Send, {p Down}{Click, R}{p Up}
  Send, e
    delay()
  Send, a
    delay()
return

$Space::
  Loop
    {
      Send, {Space}
      Sleep 10
      If !GetKeyState(Space,"P")
      break
    } 
return
