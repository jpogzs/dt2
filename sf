#NoEnv
#UseHook
#Warn
#MaxThreadsPerHotkey 1
#SingleInstance force

SendMode Input 
SetWorkingDir %A_ScriptDir%  
SetNumlockState, AlwaysOn
SetCapsLockState, Off

Ins::Suspend

SetKeyDelay, 0, 55

q::	
    Send, {m down}
    MouseClick, right
    Send, {m up}
    Sleep 300
    Send, q
    Return

w::	
    Send, {m down}
    MouseClick, right
    Send, {m up}
    Sleep 300
    Send, w
    Return

e::	
    Send, {m down}
    MouseClick, right
    Send, {m up}
    Sleep 300
    Send, e
    Return
